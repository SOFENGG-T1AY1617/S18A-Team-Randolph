<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>@ViewBag.Title | Online Request for Documents</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/font-awesome.min.css">

    
    <!-- Custom Google Web Font -->
    <link href="font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <link href='http://fonts.googleapis.com/css?family=Lato:100,300,400,700,900,100italic,300italic,400italic,700italic,900italic' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Arvo:400,700' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Raleway:300,700,900,500' rel='stylesheet' type='text/css'>
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">

    <!-- Custom CSS-->

    <link rel="stylesheet" href="~/Content/transaction.css">
    <link href="~/Content/order.css" rel="stylesheet">
    <link href="~/Content/event-list.css" rel="stylesheet">
        
    @RenderSection("headerScript", required: false);
</head>
<body style = "padding-bottom: 30px;">
    <nav class="navbar-fixed-top">
        <div class="container-fluid" style="padding-left: 25px; padding-bottom: 3px; background-color: #fefefe; border-bottom: 1px solid #e0e0e0;">
            <a href="/">
                <div class="nav navbar-left navleft" style="margin-top: 5px; height: 60px;">
                    <img src="~/Content/res/logo.png" class="navbar-brand img-responsive logo" />
                    <div class="navbar-text title" style="color: #00703c; font-family: Lato; font-weight: 500; margin-top: 8px; letter-spacing: 0.5px;">Online Request for Documents<br><p style="font-size: 14px;">Office of the Registrar</p></div>
                </div>
            </a>

            <div class="nav navbar-right navright" style="margin-right: 10px;">
                <ul class ="nav navbar-nav">
                    <li class="btn btn-default navbtn namebtn" type="submit" style="background: transparent; border: none; border-radius: 0px;"><span class="glyphicon glyphicon-user" aria-hidden="true" style="margin-top: 5px; color: #00703c;"></span> <span class="username">&nbsp;@ViewBag.name</span></li>
                <li class="dropdown">
                    <button class="btn btn-default navbtn circ dropdown dropdown-toggle" style="border-radius: 100%; background-color: #00703c; color: #fefefe;" data-toggle="dropdown"><span class="glyphicon glyphicon-shopping-cart" aria-hidden="true" style="margin-top: 5px;"></span></button>
                    @RenderSection("viewCart", required: false)
                </li>
                    <li class="btn btn-default navbtn circ" type="submit" style="border-radius: 100%; background-color: #00703c; color: #fefefe;"><span class="glyphicon glyphicon-question-sign" aria-hidden="true" style="margin-top: 5px;"></span></li>
                </ul>

                </div>

        </div>
       

        @RenderSection("btnStep", true)
    </nav>

    @RenderSection("body", true)

    <!-- JavaScript -->
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/modernizr-2.8.3.min.js"></script>  <!-- Modernizr /-->

    @RenderSection("scripts", required: false)
</body>
</html>
