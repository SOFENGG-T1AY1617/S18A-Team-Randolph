
@{
	<link href="~/Content/adminMonitor.css" rel="stylesheet" type="text/css" />


	ViewBag.Title = "Monitor Document Production";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";

	WebGrid grid = new WebGrid(Model, canPage: false, canSort: false);

}

<body>
	<div id="page-wrapper">
		<h1>@ViewBag.status</h1>
		<div class="container-fluid">

			<!-- Page Heading -->
			<div id="page-content-wrapper">
				<div class="container-fluid">
					<div class="row">
						<div class="col-lg-12" style="margin-bottom:100px">
							<div class="col-md-12" style="padding-top: 20px">
								<div id="monitoring">
									<h3><b>Document Production</b></h3>
									<hr>

									@grid.GetHtml(tableStyle: "webgrid-table",
													  headerStyle: "webgrid-header",
													  footerStyle: "webgrid-footer",
													  alternatingRowStyle: "webgrid-alternating-row",
													  columns: new[]
										{
											grid.Column("transactionID", "Transaction Number", style:"idNumber"),
											grid.Column("transactionDate", "Date Requested", style: "name"),
											grid.Column("docuName", "Document Name", style: "verified"),
											grid.Column("status", "Status", style: "verified"),

										})

								</div>
							</div>
						</div>

					</div>
				</div>
			</div>
		</div>
		<!-- /.row -->

	</div>
	<!-- /.container-fluid -->
	<!-- jQuery -->
	<script src="~/js/jquery.js"></script>

	<script type="text/javascript">
			jQuery(function ($) {
				$(document).ready(function () {
					$('.status').hide();
					$('#processing').show();
					$('#status').change(function () {
						$('.status').hide();
						$('#' + $(this).val()).show();
					})
				});
			});

	</script>
	<!-- Bootstrap Core JavaScript -->
	<script src="~/js/bootstrap.min.js"></script>
</body>